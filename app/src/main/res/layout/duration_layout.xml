<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slider_layout"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:background="#1b1b1b">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/slidertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <hiennguyen.me.circleseekbar.CircleSeekBar
        android:id="@+id/slider"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:padding="50dp"
        app:csb_arcColor="@color/black"
        app:csb_arcWidth="6dp"
        app:csb_isShowText="true"
        app:csb_max="100"
        app:csb_min="0"
        app:csb_progress="25"
        app:csb_progressColor="#83243b"
        app:csb_progressWidth="6dp"
        app:csb_textSize="16dp"
        app:csb_thumbDrawable="@drawable/ic_thumb"
        app:csb_thumbSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>